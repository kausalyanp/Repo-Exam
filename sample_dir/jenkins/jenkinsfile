pipeline {
    agent any 

    stages {
        // stage -1 Build
        stage('Build') {
            steps {
                script {
                    echo 'Building the sample project.'
                    sh 'echo "Compiling the code"'
                }
            }
        }

        // stage -2 Test
        stage('Test') {
            steps {
                script {
                    echo 'Running tests'
                    sh 'echo "Running tests on project"'
                }
            }
        }

        // stage -3 deploy
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the pplication to production'
                    sh 'echo "Deploying application to production server"'
                }
            }
        }
    }
