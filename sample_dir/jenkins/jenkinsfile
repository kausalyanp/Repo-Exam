pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the project from the GitHub repository
                git url: 'https://github.com/kausalyanp/Repo-Exam.git', branch: 'Stage_Branch'
            }
        }
        
        stage('Build') {
            steps {
                // Compile the project using Maven
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' clean compile"
                }
            }
        }

        stage('Test') {
            steps {
                // Run the unit tests
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' test"
                }
            }
        }

        stage('Package') {
            steps {
                // Package the project (generate a .jar file)
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' package"
                }
            }
        }

        stage('Deploy') {
            steps {
                // Simulate deployment (could be to any environment)
                echo 'Deploying application...'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
    }
}
